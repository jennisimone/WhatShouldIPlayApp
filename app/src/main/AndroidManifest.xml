<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whatshouldiplay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.library.GameDetail"
            android:parentActivityName=".activity.library.GameLibrary" />
        <activity android:name=".activity.add.GameAdded"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.library.GameLibrary"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.add.AddGame"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.select.GameNameView"
            android:parentActivityName=".activity.select.GameSelection" />
        <activity android:name=".activity.select.GameSelection"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>